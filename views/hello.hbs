<section class="namecard">
    <div class="namecard-hello">
        <p class="namecard-greeting">Hello, student!</p>
    </div>
    <form action="/hello" method="post" class="namecard-form">
        <label class="namecard-prompt" for="username">Please enter your name: </label>
        <input class="namecard-name" type="text" id="username" name="username" />
        <button class="namecard-submit" type="submit">Submit</button>
    </form>
</section>
